{% extends "templates/default.twig" %}

{% block title %}
{{ title }}
{% endblock %}

{% block content %}
<div class="container mt-5">
  <h2 class="h2 text-center title mb-4">Produtos</h2>
  <button class="btn btn-success my-2 actCreate">Criar novo produto</button>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Imagem</th>
        <th scope="col" style="width: 150px">Nome</th>
        <th scope="col">Preço</th>
        <th scope="col">Qtd</th>
        <th scope="col">Descrição</th>
        <th scope="col">Categoria</th>
        <th scope="col" class="text-center" style="width: 240px">Ações</th>
      </tr>
    </thead>
    <tbody id="products">
    </tbody>
  </table>
</div>

<!-- Modal -->
<div class="modal fade" id="createModal" data-backdrop="static" data-keyboard="false" tabindex="-1"
  aria-labelledby="createModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header d-flex justify-content-center">
        <h3 class="modal-title" id="createModalLabel"><span class="spanContext"></span> Produto</h3>
      </div>
      <div class="modal-body">
        <div id="alert"></div>
        <div id="image" class="w-100 d-flex justify-content-center"></div>
        <div id="inputNameCheck" class="form-group">
          <label for="inputName">Produto</label>
          <input id="inputId" class="form-control" type="text">
        </div>
        <div class="form-group">
          <label for="inputName">Nome</label>
          <input id="inputName" class="form-control" type="text">
        </div>
        <div class="form-group">
          <label for="inputQtd">Quantidade</label>
          <input id="inputQtd" class="form-control" type="email">
        </div>
        <div class="form-group">
          <label for="inputPrice">Preço</label>
          <input id="inputPrice" class="form-control" type="email">
        </div>
        <div class="form-group">
          <label for="inputCategory">Categoria</label>
          <select id="inputCategory" class="form-control">
          </select>
        </div>
        <div class="form-group">
          <div class="d-flex justify-content-between">
            <label for="inputDesc">Descrição</label>
          </div>
          <input id="inputDesc" class="form-control" type="text">
        </div>
        <div class="modal-footer d-flex justify-content-between">
          <button id="btnCancel" type="button" class="btn btn-outline-secondary">
            Cancelar
          </button>
          <button id="btnCreate" type="button" class="btn btn-primary"><span class="spanContext"></span></button>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block script %}
{{ parent() }}
<script type="text/javascript" src="{{ assetsPath }}/js/pages/adminProducts.js"></script>
{% endblock %}