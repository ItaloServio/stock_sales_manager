{% extends "templates/default.twig" %}

{% block title %}
  {{ title }}
{% endblock %}

{% block content %}
<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <h1 class="h2 text-center title mb-5">PEDIDO</h1>
    </div>

    <div class="col-lg-12">
      <div class="card px-4 py-5">
        <div class="d-flex justify-content-between align-items-center mb-5">
          <div>
            <h1 class="h5 mb-0"><i>Status do Pedido:</i></h1>
            <h2 class="h5 title text-warning">Aguardando aprovação do pagamento</h2>
          </div>
          <div>
            <button class="btn btn-warning btn-sm">Imprimir boleto</button>
          </div>
        </div>
        <div>
          <h1  class="h4 mb-4">Descrição do pedido:</h1>
          <div class="card px-4 py-5">
            <ul id="cart" class="list-group list-group-flush">
            </ul>
          </div>
          <div class="d-flex justify-content-end mt-3 pr-2">
            <h3 class="text-muted h4">Valor total: <span id="totalPrice" class="title text-dark h2"></span></h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}

{% block script %}
	{{ parent() }}
  <script>
    const orderId = "{{ optionals['orderId'] }}";
  </script>
  <script type="text/javascript" src="{{ assetsPath }}/js/pages/order.js"></script>
{% endblock %}