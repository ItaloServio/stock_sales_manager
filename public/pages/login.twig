{% extends "templates/centered.twig" %}

{% block title %}
	{{title}}
{% endblock %}

{% block content %}
	<div class="container d-flex justify-content-center">
		<div class="col-lg-5">
	    <div class="card p-5">
	    	<div class="d-flex justify-content-center">
	    		<img class="mb-3" src="{{assetsPath}}/img/sys/SSMLogo.svg" height="70px" width="auto" alt="SSM Logo">
	    	</div>
	    	<h1 class="h3 mb-3 text-center">Acesse o Sistema</h1>
	    	<h2 class="h6 text-secondary text-center">
	    		Caso já possua uma conta realize o acesso abaixo:<br>
	    		Não possui uma conta? <a class="link text-primary" href="signup">Criar agora</a>
	    	</h2>
    		<hr class="my-3">
    		<div id="alert"></div>
    		<input id="inputUser" type="text" class="form-control my-1" placeholder="Usuário">
    		<input id="inputPass" type="password" class="form-control my-1" placeholder="Senha">
    		<div class="d-flex justi">
    			<small><a class="link text-primary" href="">Esqueci minha senha</a></small>
    		</div>
    		<hr class="my-3">
  			<button id="btnLogin" class="btn btn-success">Acessar</button>
	    </div>
		</div>
	</div>
{% endblock %}

{% block script %}
	{{ parent() }}
	<script type="text/javascript" src="{{assetsPath}}/js/core/md5.js"></script>
	<script type="text/javascript" src="{{assetsPath}}/js/pages/login.js"></script>
{% endblock %}