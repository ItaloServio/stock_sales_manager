{% extends "templates/default.twig" %}

{% block title %}
  {{ title }}
{% endblock %}

{% block content %}
  <div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <h1 class="h2 text-center title mb-5">PEDIDO</h1>
      </div>

      <div class="col-lg-12">
        <div class="card px-4 py-5">
          <div class="d-flex justify-content-between align-items-center mb-5">
            <div id="pay">
              <h1 class="h5 mb-0"><i>Status do Pedido:</i></h1>
            </div>
            <div>
              <button id="btnBoleto" class="btn btn-warning btn-sm">Imprimir boleto</button>
            </div>
          </div>
          <div>
            <h1 class="h4 mb-4">Descrição do pedido:</h1>
            <div class="card px-4 py-5">
              <ul id="cart" class="list-group list-group-flush">
              </ul>
            </div>
            <div class="d-flex justify-content-end mt-3 pr-2">
              <h3 class="text-muted h4">Valor total: <span id="totalPrice" class="title text-dark h2"></span></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal Boleto -->
  <div class="modal fade" id="modalBoleto" tabindex="-1" aria-labelledby="modalBoletoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div id="modalContent" class="modal-content">
        <div class="modal-header">
          <div class="d-flex justify-content-center">
            <h5 class="modal-title" id="modalBoletoLabel">Boleto de pagamento</h5>
          </div>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div id="modalBoletoBody" class="modal-body d-flex justify-content-center"></div>
        <div class="modal-footer d-flex justify-content-center">
          <button id="btnPrint" type="button" class="btn btn-primary">Imprimir boleto</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block script %}
  {{ parent() }}
  <script>
    const orderId = "{{ optionals['orderId'] }}";
  </script>
  <script type="text/javascript" src="{{ assetsPath }}/js/pages/order.js"></script>
{% endblock %}