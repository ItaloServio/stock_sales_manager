{% extends "templates/default.twig" %}

{% block title %}{{title}}{% endblock %}

{% block content %}
  <div class="container">
    <div class="row my-4 justify-content-center">
      <div class="col-lg-6">
        <h1 class="h2 text-center">Editar perfil</h1>
        <div class="mt-5 mb-4">
          <div class="d-flex justify-content-center mb-3">
            <img src="{{assetsPath}}/img/profiles/default.png" class="img-edit" alt="Foto de perfil">
          </div>
          <div class="d-flex justify-content-center">
            <button class="btn btn-primary">Editar imagem</button>
          </div>
        </div>
        <div id="alert"></div>
        <div class="form-group">
          <label for="inputLogin">Login</label>
          <input id="inputLogin" type="text" class="form-control" disabled>
          <small class="text-primary"><i>Este campo n√£o pode ser alterado</i></small>
        </div>
        <div class="form-group">
          <label for="inputName">Nome</label>
          <input id="inputName" type="text" class="form-control">
        </div>
        <div class="form-group">
          <label for="inputEmail">Email</label>
          <input id="inputEmail" type="email" class="form-control">
        </div>
        <div class="form-group">
          <label for="inputPass">Senha</label>
          <input id="inputPass" type="password" class="form-control">
        </div>
        <div class="form-group">
          <label for="inputPass2">Repita a senha</label>
          <input id="inputPass2" type="password" class="form-control">
        </div>
        <div class="d-flex justify-content-between">
          <a href="{{basePath}}/" class="btn btn-outline-secondary">Cancelar</a>
          <button id="btnEdit" class="btn btn-success">Salvar</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block script %}
  {{ parent() }}
  <script>
    var userId      = "{{user['id']}}";
    var userName    = "{{user['name']}}";
    var userOldPass = "{{user['pass']}}";
    var userLogin   = "{{user['login']}}";
    var userEmail   = "{{user['email']}}";
  </script>
  <script type="text/javascript" src="{{assetsPath}}/js/pages/profile.js"></script>
{% endblock %}