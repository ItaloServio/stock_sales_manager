{% extends "templates/default.twig" %}

{% block title %}
  {{title}}
{% endblock %}

{% block content %}
  <div class="container mt-5">
    <h2 class="h2 text-center mb-4">Usuarios</h2>
    <button class="btn btn-success my-2 actCreate">Criar novo usuário</button>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col" class="text-center">Ações</th>
        </tr>
      </thead>
      <tbody id="users">
      </tbody>
    </table>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="createModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header d-flex justify-content-center">
          <h3 class="modal-title" id="createModalLabel"><span class="spanContext"></span> usuário</h3>
        </div>
        <div class="modal-body">
    		  <div id="alert"></div>
          <div class="form-group">
            <label for="inputLogin">Login</label>
            <input id="inputLogin" class="form-control" type="text">
          </div>
          <div class="form-group">
            <label for="inputName">Nome</label>
            <input id="inputName" class="form-control" type="text">
          </div>
          <div class="form-group">
            <label for="inputEmail">Email</label>
            <input id="inputEmail" class="form-control" type="email">
          </div>
          <div class="form-group">
            <div class="d-flex justify-content-between">
              <label for="inputPass">Senha</label>
              <small id="passview" class="text-primary align-self-end"><i>Deixe em branco caso não queira alterar a senha</i></small>
            </div>
            <input id="inputPass" class="form-control" type="password">
          </div>
          <div class="custom-control custom-checkbox mr-2">
            <input type="checkbox" class="custom-control-input" id="inputAdmin">
            <label class="custom-control-label" for="inputAdmin">Administrador</label>
          </div>
        </div>
        <div class="modal-footer d-flex justify-content-between">
          <button id="btnCancel" type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
          <button id="btnCreate" type="button" class="btn btn-primary"><span class="spanContext"></span></button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block script %}
  {{ parent() }}
  <script type="text/javascript" src="{{assetsPath}}/js/core/md5.js"></script>
  <script type="text/javascript" src="{{assetsPath}}/js/pages/adminUsers.js"></script>
{% endblock %}