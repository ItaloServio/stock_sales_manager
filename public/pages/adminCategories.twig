{% extends "templates/default.twig" %}

{% block title %}{{title}}{% endblock %}

{% block content %}
  <!-- Content -->
  <div class="container mt-5">
    <h2 class="h2 text-center mb-4">Categorias</h2>
    <button class="btn btn-success my-2"  data-toggle="modal" data-target="#createModal">Criar nova categoria</button>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Categoria</th>
          <th></th>
        </tr>
      </thead>
      <tbody id="categories">
      </tbody>
    </table>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="createModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header d-flex justify-content-center">
          <h3 class="modal-title" id="createModalLabel">Criar nova categoria</h3>
        </div>
        <div class="modal-body">
    		  <div id="alert"></div>
          <div class="form-group">
            <label for="inputCategory">Nome da categoria</label>
            <input id="inputCategory" class="form-control" type="text">
          </div>
        </div>
        <div class="modal-footer d-flex justify-content-between">
          <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
          <button id="btnCreate" type="button" class="btn btn-primary">Criar</button>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block script %}
{{ parent() }}
<script type="text/javascript" src="{{assetsPath}}/js/pages/adminCategories.js"></script>
{% endblock %}